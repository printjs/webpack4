@import "var.styl"
.note-catalog-panel
    display flex
    flex-direction column
    >.ant-input
        border-radius 0px
    >.tool-box
        height 30px
        border-right 1px solid $border-line
        border-bottom 1px solid $border-line
        display flex
        align-items center
        justify-content space-between
        font-size 12px
        >.title
            text-align left
            padding-left 15px
        >.box
            display flex
            margin-right 10px
            >i 
                cursor pointer
                margin-right 10px
                &:hover
                    color $main-color
    >.note-tool-panel
        position relative
        border-right 1px solid $border-line
        overflow-y auto
        overflow-x hidden
        flex 1 0 auto
        transition flex 1s
    >.height0
        flex 0 0 0 
.note-work-panel
    position relative
    flex-grow 1
