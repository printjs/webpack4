{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "dom",
            "es2015"
        ],
        "jsx": "react",
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@route/*": [
                "src/route/*"
            ],
            "@views/*": [
                "src/views/*"
            ],
            "@store/*": [
                "src/store/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@main/*": [
                "src/main_process/*"
            ]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    }
}